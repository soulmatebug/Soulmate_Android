<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMain"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar3" />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="169dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="   E-mail      "
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/email" android:layout_weight="1"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/editText3"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Password  "
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/password" android:layout_weight="1"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/pw_input"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:padding="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
        >
            <Button
                    android:text="Login"
                    android:background="@drawable/main_button_border"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/login"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"/>
            <Button
                    android:text="Join"
                    android:background="@drawable/main_button_border"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/join"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>